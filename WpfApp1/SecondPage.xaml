        <TextBox Name="textbox3" Grid.Row="2" Grid.Column="1" Padding="12" Margin="16" Height="Auto"/>
        <TextBox Name="answer" Grid.Row="3" Grid.ColumnSpan="2" Margin="16,34,16,25" Height="71" VerticalAlignment="Center"/>
        <Button Content="выполнить" Click="Button_Click2" FontSize="12" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="2" Width="300" FontFamily="Candara"  Margin="221,27,279,10" Height="36" />
    </Grid>
</Page>
